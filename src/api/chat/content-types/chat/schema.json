{
  "kind": "collectionType",
  "collectionName": "chats",
  "info": {
    "singularName": "chat",
    "pluralName": "chats",
    "displayName": "Chat",
    "description": "Chat entity for messaging system"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "topic": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "participants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "chats"
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "successfully_completed", "unsuccessfully_completed", "closed"],
      "default": "active",
      "required": true
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "chat"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product"
    },
    "createdAt": {
      "type": "datetime"
    },
    "updatedAt": {
      "type": "datetime"
    }
  }
}
