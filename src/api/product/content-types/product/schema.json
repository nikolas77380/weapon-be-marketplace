{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "products"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "products"
    },
    "status": {
      "type": "enumeration",
      "default": "available",
      "enum": [
        "available",
        "reserved",
        "sold",
        "archived"
      ]
    },
    "attributesJson": {
      "type": "json"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "product"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "certificates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::certificate.certificate",
      "mappedBy": "product"
    },
    "favourites": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::favourite.favourite",
      "mappedBy": "product"
    },
    "viewsCount": {
      "type": "biginteger",
      "default": 0
    }
  }
}
